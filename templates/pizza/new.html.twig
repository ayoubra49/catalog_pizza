{% extends 'base.html.twig' %}

{% block title %}Nouvelle pizza{% endblock %}

{% block body %}
    <h1>Nouvelle pizza</h1>
    <div class="row">
        <div class="col-md-6">
            {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.name, 'Nom de la pizza') }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.price, 'Prix de la pizza') }}
                {{ form_widget(form.price, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                <label>Ingrédients :</label>
                {% for ingredient in form.pizzaIngredients %}
                    <div class="form-check">
                        {{ form_widget(ingredient) }}
                        {{ form_label(ingredient) }}
                    </div>
                {% endfor %}
            </div>
            {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
            {{ form_end(form) }}
        </div>
    </div>
    <a href="{{ path('pizza_index') }}">Retour à la liste des pizzas</a>
{% endblock %}
